pipeline {
    agent { dockerfile true}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh """
                    pwd
                    npm install
                    npm start                
                """
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'

            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
