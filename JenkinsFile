pipeline {
    agent { 
        dockerfile {
                args '-u root --privileged'
            }
        } 
           
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                dir("munster")
                {
                    sh """
                    npm install
                    npm run
                    """
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'

            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
