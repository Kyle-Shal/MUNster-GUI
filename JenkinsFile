pipeline {
    agent { dockerfile true}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                dir("munster")
                {
                    sh """
                    npm install
                    npm run
                    """
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'

            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
