pipeline {
    agent { dockerfile true}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh """
                    pwd
                    ls
                    cd /var/lib/jenkins/workspace/MUNster-GUI_creating-docker-file/munster
                    npm install
                    npm start                
                """
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'

            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
